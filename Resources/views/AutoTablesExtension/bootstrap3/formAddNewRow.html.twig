{% if entities %}

    <div id="formAddNewRow" class="modal fade" data-disable-popup="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="#" onsubmit='$("#formAddNewRow").modal("hide");'>
                    <input type="hidden" name="tableId" value="{{ tableId }}"/>
                    <input type="hidden" name="id" id="id" rel="0" value="DATAROWID"/>

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">{{ 'Add_entry_title'|trans({}, transScope) }}</h4>
                    </div>
                    <div class="modal-body">
                        {% for column in entities|first.columns %}
                            {% if not column.readOnly and column.visible %}
                                <label for="{{ column.columnDescriptorId }}">{{ column.name|trans({}, transScope) }}</label>
                                <input type="text" name="{{ column.columnDescriptorId }}"
                                       id="{{ column.columnDescriptorId }}"
                                       class="required"
                                       rel="{{ loop.index }}"/>
                                <br/>
                            {% elseif not column.visible and column.initializer.id %}
                                <input type="hidden" name="id{{ column.columnDescriptorId }}"
                                       value="{{ column.initializer.id }}"/>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Cancel'|trans({}, transScope) }}</button>
                        <button type="submit" class="btn btn-primary">{{ 'Save'|trans({}, transScope) }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endif %}
