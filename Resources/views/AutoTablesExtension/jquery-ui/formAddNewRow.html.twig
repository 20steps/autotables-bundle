{% if entities %}

    <form id="formAddNewRow" class="hide" action="#" title="{{ 'Add_entry_title'|trans({}, transScope) }}">
        <input type="hidden" name="tableId" value="{{ tableId }}"/>
        <input type="hidden" name="id" id="id" rel="0" value="DATAROWID"/>
        {% for column in entities|first.columns %}
            {%  if not column.readOnly and column.visible %}
                <label for="{{ column.columnDescriptorId }}">{{ column.name|trans({}, transScope) }}</label>
                <input type="text" name="{{ column.columnDescriptorId }}"
                       id="{{ column.columnDescriptorId }}"
                       class="required"
                       rel="{{ loop.index }}"/>
                <br/>
             {%  elseif not column.visible and column.initializer.id %}
                 <input type="hidden" name="id{{ column.columnDescriptorId }}" value="{{ column.initializer.id }}"/>
            {%  endif %}
        {% endfor %}
    </form>

{% endif %}
