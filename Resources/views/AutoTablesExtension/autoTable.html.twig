{% if entities %}

    view is: {{  views~':columnActions.html.twig'}}
    <table id='myDtTable'>
        <thead>
        <tr>
            <th>ID</th>
            {% for column in entities|first.columns %}
                <th>{{ column.name|trans({}, transScope) }}</th>
            {% endfor %}
            <th>{{ 'action.links.header'|trans({}, transScope) }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr id="{{ entity.id }}">
                <td class="read_only">{{ entity.id }}</td>
                {% for column in entity.columns %}
                    <td id="td_{{ loop.index }}" class="{{ column.readOnly ? 'read_only' : '' }}">{% include [views~':columnValue.html.twig','twentystepsAutoTablesBundle:AutoTablesExtension:columnValue.html.twig'] with {column: column} %}</td>
                {% endfor %}
                <td>{% include [views~':columnActions.html.twig','twentystepsAutoTablesBundle:AutoTablesExtension:columnActions.html.twig'] with {'entityId': entity.id} %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button id="btnAddNewRow">{{ 'Add_entry_button'|trans({}, transScope) }}</button>

    {% include [views~':formAddNewRow.html.twig','twentystepsAutoTablesBundle:AutoTablesExtension:formAddNewRow.html.twig'] %}

{% endif %}
